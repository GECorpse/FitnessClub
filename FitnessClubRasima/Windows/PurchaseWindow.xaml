<Window x:Class="FitnessClubRasima.Windows.PurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessClubRasima.Windows"
        mc:Ignorable="d"
        Title="PurchaseWindow" Height="720" Width="1280" >
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="resources/Background1.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center">

            <TextBlock
                Text="Оплата"
                FontSize="48" 
                />
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">

            <TextBlock
                Text="Введите номер вашей карты:"
                FontSize="28"
                Margin="0 0 0 0"/>

            <TextBox
                x:Name="TbCard" 
                Width="400"
                Height="35"
                Margin="0 10 0 0"
                />

        </StackPanel> 

    </Grid>
</Window>
